[Unit]
Description=Minecraft Server
After=network.target

[Service]
User={{ minecraft_user }}
Nice=1
SuccessExitStatus=0 1
WorkingDirectory={{ minecraft_dir }}
ExecStart=/usr/bin/java -Xms{{minecraft_ram_mb}}M -Xmx{{minecraft_ram_mb}}M -jar "$minecraft_dir/server.jar" nogui
ExecStop=docker exec -it mcrcon run stop

[Install]
WantedBy=multi-user.target
